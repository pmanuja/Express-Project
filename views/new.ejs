<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <% include ./partials/head.ejs %>
  <title>New Appointment</title>
</head>
<body>

  <div class="edit-info">
    <h3>New Appointment</h3>
    <div class="form-body">
      <form action="/new" method="POST">

        <div class="">
          <div class="form-group row">
            <label class="col-sm-2 col-form-label col-form-label-sm" for=""><strong>Date</strong></label>
            <% let today = new Date();%>
            <% let dd = String(today.getDate()).padStart(2, '0');%>
            <% let mm = String(today.getMonth() + 1).padStart(2, '0');%>
            <% let yyyy = today.getFullYear();%>
            <% let day= today.getDay()%>
            <% today = yyyy + '-' + mm + '-' + dd;%>
            <%console.log('Today is ', today)%>
            <div class="col-sm-10">
              <input type="date" min="<%=today%>" name="date" value="<%=today%>" />

            </div></div>
            <div class="form-group row">
              <label class="col-sm-2 col-form-label col-form-label-sm" for=""><strong>Time</strong></label>
              <div class="col-sm-10">
                <input type="time"  name="time" />
              </div></div>
              <div class="form-group row">
                <label class="col-sm-2 col-form-label col-form-label-sm" for=""><strong>With</strong></label>
                <div class="col-sm-10">
                  <input type="text" name="with" />
                </div></div>
                <div class="form-group row">
                  <label class="col-sm-2 col-form-label col-form-label-sm" for=""><strong>Where</strong></label>
                  <div class="col-sm-10">
                    <input type="text" name="location" />
                  </div></div>
                  <div class="form-group row">
                    <label class="col-sm-2 col-form-label col-form-label-sm" for=""><strong>Description</strong></label>
                    <div class="col-sm-10">
                      <input type="text" name="description" />
                    </div></div>
                  </div>
                  <div class="container">
                    <div class="cancel-btn">
                      <a class="btn btn-info" href="/showAll">Cancel</a>
                    </div>

                    <div class="update-btn">
                      <input class="btn btn-info" type="submit" name="" value="ADD"/>
                    </div>

                  </div>

                </form>
              </div>

            </div>
          </body>
          </html>
